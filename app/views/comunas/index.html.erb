<h1>Comunas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"> Acciones </th>
    </tr>
  </thead>

  <tbody>
    <% @comunas.each do |comuna| %>
      <tr>
        <td><%= comuna.nombre %></td>
        <td><%= link_to 'Ver', comuna_path(comuna.id) %>
      </tr>
    <% end %>
  </tbody>
</table>

