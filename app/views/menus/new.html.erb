<h1>Nuevo Menu</h1>
<p>Ingrese los datos de su nuevo menu:</p>

<%= form_with(model: @menu, url: local_menus_path(@local_id), method: :post) do |form| %>

  <div class='field'>
    <%= form.label :nombre%>
    <%= form.text_field :nombre%>
  </div>

  <div class='field'>
    <%= form.label :descripcion%>
    <%= form.text_area :descripcion%>
  </div>

  <div class='field'>
    <%= form.label :precio%>
    <%= form.number_field :precio%>
  </div>
  <p></p>
  <div class="actions">
    <%= form.submit%>
  </div>
<% end %>

<%= link_to 'Volver', edit_local_path(@local_id)%>