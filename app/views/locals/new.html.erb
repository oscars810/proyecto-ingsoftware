<h1>Form registro nuevo local</h1>
<p>Ingrese los datos de su local:</p>

<%= form_with(model: @local, method: :post) do |form| %>
    <div class='field'>
        <%= form.label :nombre %>
        <%= form.text_field :nombre %>
    </div>
    
    <div class='field'>
        <%= form.label :comuna %>
        <%= form.select :desired_atribute, ['comuna1', 'comuna2'] %>
    </div>

    <div class='field'>
        <%= form.label :descripcion %>
        <%= form.text_area :descripcion %>
    </div>
    <p></p>
    <div class='actions'>
        <%= form.submit %>
    </div>
<%end%>