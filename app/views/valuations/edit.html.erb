<section class="section">
<div class="columns">
    <div class="column"></div>
    <div class="column is-6">
        <div class="box">
            <h1 class="title has-text-centered"> Dejar valoración en <%= @local.nombre %></h1>
            <%= form_with(model: @valuation, url: local_valoracione_path(@local.id, @valuation.id), method: :patch) do |form| %>
                <div class="control">
                    Valoración <br>
                    <% [1, 2, 3, 4, 5].each do |i|%>
                    <label class="radio">
                        <%= i %>
                        <%= form.radio_button(:valuation, i)%>
                    </label>
                    <% end %>
                </div><br>

                <div class="actions">
                    <%= form.submit 'Dejar valoración', class: "button is-primary"%>
                    <%= link_to "Volver", perfil_path(current_user.id), class: "button is-link"%>
                </div>
            <% end %>
        </div>
    </div>
    <div class="column"></div>
</div>
</section>