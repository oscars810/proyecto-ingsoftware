<!DOCTYPE html>
<html>
<head>
  <title>MatchMeat</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.2/css/bulma.min.css">
  <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
</head>
<body>

<% if current_user and current_user.id == params[:id].to_i and Local.find_by('user_id = ?', current_user.id) %>
  <%idlocal = Local.find_by('user_id = ?', current_user.id).id%>
  <p align='right'><%= link_to 'Ver mi local', local_path(idlocal) %></p>
<% elsif current_user.id == params[:id].to_i %>
  <p align='right'><%= link_to 'Inscribir mi local', new_local_path %></p>
<%end%>

<% if current_user.id == @user.id %>
  <h1>Mi Perfil</h1>
<% else %>
  <h1>Perfil de <%= @user.nombre %></h1> 
<% end %>

<p>
    <strong>Nombre:</strong>
    <%= @user.nombre %>
</p>

<p>
    <strong>Email:</strong>
    <%= @user.email %>
</p>

<p>
    <strong>Descripcion:</strong>
    <%= @user.descripcion %>
</p>

<p>
    <strong>Edad:</strong>
    <%= @user.edad %>
</p>

<p>
    <strong>Telefono:</strong>
    <%= @user.telefono %>
</p>

<% if current_user.id == @user.id %>
  <%= link_to 'Editar perfil', perfil_edit_path(@user.id) %>
  <%= link_to 'Eliminar cuenta', perfil_path(@user.id),  method: :delete, alert: 'Â¿Estas seguro?' %>

<% end %>

</body>
</html>