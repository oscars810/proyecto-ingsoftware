<div class="container">
	<div class="box">
		<h1 class="title is-5">Nueva Comuna</h1>

		<%= form_with(model: @comuna, url: comunas_path(@comuna.id), method: :post) do |form| %>
		  <div class="field">
		    <%= form.label :nombre %>
		    <%= form.text_field :nombre %>
		  </div>

		  <div class="actions">
		    <%= form.submit 'Crear comuna'%>
		  </div>
		<% end %>

		<%= link_to 'Volver', comunas_path %> 
	</div>
</div>