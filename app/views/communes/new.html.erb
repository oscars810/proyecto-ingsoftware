<section class="section">
<div class="columns">
	<div class="column"></div>
	<div class="column is-4">
		<div class="box">
			<h1 class="title has-text-centered"> Nueva comuna </h1>
			<%= form_with(model: @comuna, url: comunas_path(@comuna.id), method: :post) do |form| %>
		  		<div class="field">
		    		Nombre:
		    		<%= form.text_field :nombre, class: "input"%>
		  		</div>
				<div class="actions">
					<%= form.submit 'Crear comuna', class: "button is-primary"%>
					<%= link_to "Volver", comunas_path, class: "button is-link"%>
				</div>
			<% end %>
		</div>
	</div>
	<div class="column">
</section>