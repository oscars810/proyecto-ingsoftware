<div class="container">
<h1 class="title is-5 has-text-white is-spaced">Comunas</h1>

<hr>
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"> Acciones </th>
    </tr>
  </thead>

  <tbody>
    <% @comunas.each do |comuna| %>
      <tr>
        <td><%= comuna.nombre %></td>
        <td><%= link_to 'Ver', comuna_path(comuna.id)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear Comuna', new_comuna_path, style: "color:white" %>
<br>
<%= link_to 'Volver al Panel', admin_path, style: "color:white" %>
</div>