<div class="container">
  <div class="box">
    <h1 class="title is-5">Nuevo Gusto</h1>

    <%= form_with(model: @gusto, url: gustos_path(@gusto.id), method: :post) do |form| %>
      <div class="field">
        <%= form.label :nombre %>
        <%= form.text_field :nombre %>
      </div>

      <div class="field">
        <%= form.label :descripcion %>
        <%= form.text_field :descripcion %>
      </div>

      <div class="actions">
        <%= form.submit 'Crear gusto'%>
      </div>
    <% end %>

    <%= link_to 'Volver', gustos_path %>
  </div>
</div>