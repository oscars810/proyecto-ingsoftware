<h1>Gustos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"> Acciones </th>
    </tr>
  </thead>

  <tbody>
    <% @gustos.each do |gusto| %>
      <tr>
        <td><%= gusto.nombre %></td>
        <td><%= link_to 'Ver', gusto_path(gusto.id) %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear gusto', new_gusto_path %>
