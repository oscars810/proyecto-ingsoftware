<h1>Editar Gusto</h1>

<%= form_with(model: @gusto, url: gusto_path(@gusto.id), method: :patch) do |form| %>
  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div class="field">
    <%= form.label :descripcion %>
    <%= form.text_field :descripcion %>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar'%>
  </div>
<% end %>
<%= link_to 'Volver', gusto_path(@gusto.id) %> 