<section class="hero is-danger">
  <div class="hero-body">
    <div class="container">
      <h1 class="title has-text-centered"> Comentarios de <%= @user.nombre %></h1>
      <div class="buttons is-centered">
        <%= link_to 'Volver', perfil_path(@user.id), class: "button is-link is-rounded"%>
      </div>
    </div>
  </div>
</section>

<section class="section">
  <div class="columns">
    <div class="column"></div>
    <div class="column is-two-thirds">
      <% @comentarios.each do |comentario|%>
        <% local = Local.find(comentario.local_id)%>
        <div class="box">
            <article class="media">
             <div class="media-content">
                <div class="content">
                    <p><small><i><%= comentario.created_at.strftime("%d-%m-%Y")%></i> a las <i><%= comentario.created_at.strftime("%H:%M")%>
                    en <%= link_to local.nombre, local_path(local.id)%> </i></small>
                    <br>
                    <%= comentario.contenido %>
                    </p>
                </div>
                <div class="buttons">
                <% if user_signed_in? and current_user.id == comentario.user_id%>
                <%= link_to 'Eliminar Comentario', local_comentario_path(comentario.local_id, comentario.id, perfil: true), method: :delete, class: "button is-danger"%>
                <% end %>
                </div>
            </div>
            </article>
        </div>
      <% end %>
    </div>
    <div class="column"></div>
  </div>
</section>