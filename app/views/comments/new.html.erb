<h1>Nuevo Comentario</h1>

<%= form_with(model: @comentario, url: local_comentarios_path(@local.id), method: :post) do |form| %>
<div class="field">
    <%= form.label :contenido %>
    <%= form.text_area :contenido %>
</div>

<div class="actions">
    <%= form.submit 'Dejar Comentario'%>
</div>
<% end %>

<%= link_to 'Volver', local_path(@local.id) %> 