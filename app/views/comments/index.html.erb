<%if not current_user or not current_user.admin?%>
    <h1 style="text-align:center"> ACCESO DENEGADO </h1>
<%else%>
    <h1>Comentarios</h1>

    <p id="notice"><%= notice %></p>
    <table>
    <thead>
        <tr>
        <th>Usuario</th>
        <th>Contenido</th>
        <th colspan="3"> Acciones </th>
        </tr>
    </thead>

    <tbody>
        <% @comentarios.each do |comentario| %>
        <tr>
            <td><%= User.find_by("id=?", comentario.idusuario).nombre %></td>
            <td><%= comentario.contenido %></td>
            <td><%= link_to 'Eliminar comentario', comentarios_path(:id_comentario => comentario.id),  method: :delete, alert: 'Â¿Estas seguro?' %></td>
        </tr>
        <% end %>
    </tbody>
    </table>

    <br>
    <%= link_to 'Volver al Panel', admin_path%>
<%end%>